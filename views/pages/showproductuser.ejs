<!DOCTYPE html>
<html>
<head>
<style>
table{
	width: 100%;
}
body {
  margin: 0;
  padding: 0;
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  background: rgb(255, 200, 21);
}
.main{
	background: white;
	border:1px solid;
	width:70%;
	height:50%;
    margin-top: 3%;
	margin-left:15%;
	border-radius:3px;
	padding: 2%;	
}
subclass{
	font-size:20px;
}
input {
	border-top-style: hidden;
	border-right-style: hidden;
	border-left-style: hidden;
	border-bottom-style: groove;
	width:50%;
	height:30px;
}
      
button{
	width:125px;
	height:40px;
	font-size:15px;
	background: rgb(0, 0, 0);
	border-radius:10px;
	cursor:pointer;	
	color:#fff;
}
button:hover{
	background:lightgreen;
	font-weight: bold;
	color:rgb(0, 0, 0);
}

.container {
	margin-right:20px;
}
.navigation {
	position: sticky; 
            z-index: 200;
            width: 98.5%;
            height: 50px;
            padding: 10px;
            background:rgb(17, 17, 17);             
            color: #fff; 
}
.logo {
            width: 25%;
            float: left;
            line-height: 40px;
			margin-top: -0.5%;
            margin-left:30px;
        }

a{
	color:rgb(255, 255, 255);
}

.navigation-links {
	text-align: right;
}
.navigation-links li {
	display: inline-block;
	padding: 5px 20px;	
	border-radius: 20px;
}

.navigation-links li.active {
	background-color: rgba(224, 245, 109, 0.3);
}

.navigation-links li:hover {
	background-color: rgb(255, 200, 21);
	
	cursor: pointer;
}

	.ui_grid
    {
        height : 10%;
		width: 32%;
		position: relative;		
        margin-top: -40%;
		margin-left: 68%;
		opacity: 0.8;
    }

</style>

</head>

<body>
	<nav class="navigation">
        <div class="logo"><img  src="../.././img/logo.png" alt="Italian Trulli" class = "logo"><p>MeAsIllustrator</p></div>
        <div class="container">
            <ul class="navigation-links">
                <li class="active"><a href="dashboard" style="text-decoration:none; color:black;">Home</a></li>
                <li><a href="showproductuser" style="text-decoration:none; color:black;">Product</a></li>
                <li><a href="profile" style="text-decoration:none; color:black;">Profile</a></li>
                <li><a href="login" style="text-decoration:none; color:black;">Login</a></li>
            </ul>
        </div>
    </nav>
<div class = "main"><center>
	<div class="subclass">
		<form action="/showproduct" method="post">
			<br>
			<h1>Products</h1>

			<br>
			<table border="1px" style="text-align:center" >
        <tr>
          <td> <b>Product Name</b> </td>
          <td> <b>Category </b></td>	
          <td> <b>Description</b> </td>
          <td> <b>Time</b> </td>
		  <td> <b>Type </b></td>
		  <td> <b>Slot </b> </td>          
          <td> <b>Buy Product</b> </td>
        </tr>
        <% for(var i = 0;i < user.length ; i++) {%>
        <tr>
          <td> <%= user[i].pname %> </td>
          <td><%= user[i].category %></td>
		  <td> <%= user[i].description %></td>
		  <td> <%= user[i].time %></td>
		  <td> <%= user[i].type %></td>
		  <td> <%= user[i].slot %></td>	
				
        </tr>
        <% } %>
		<input type="text" hidden name="pname" value= <%= user[1].pname %> />
		<input type="text" hidden name="category" value= <%= user[1].category %> />
		<input type="text" hidden name="description" value= <%= user[1].description %> />
		<input type="text" hidden name="time" value= <%= user[1].time %> />
		<input type="text" hidden name="type" value= <%= user[1].type %> />
		<input type="text" hidden name="slot" value= <%= user[1].slot %> />

		<td><button class="btn btn-block btn-primary btn-lg" type="submit" >Buy Product</button></td>
		  
	</div></center>	
	</div>
</form>
</div>

</body>
</html>
